<div class="detail_comment">
    <div class="detail_author input_cmt">
        <div class="author_img  is-hover">
            <img src="./assests/img/author_ava.png" alt="avt author" id="img_comment_author">
        </div>
        <form class="author_info" method="get">
            <span>
                <textarea name="" id="text_user" cols="30" rows="10" placeholder="Ý kiến của bạn?"></textarea>
            </span>
            <span class="author_info_btm">
                <button class="author_info_register">
                    <span>Đăng kí</span>
                </button>
                <input type="button" value="Gửi bình luận" class="btn_cmt" onclick="getCommentUser()">
            </span>
        </form>
    </div>
    <div class="detail_author show_cmt" id="showcomment">
        
     
    </div>
</div>
<div class="show-comment__elements" id="comment_element" style="display: none;">
    <div class="author_info">
        <span>
            <div class="author_info__header">
                <div class="author_img  is-hover">
                    <img src="{{url}}"   alt="avt author">
                </div>
                <div class="nameAtime_us_cmt">
                    <div class="name_us_cmt">{{name}}</div>
                    <time>{{time}}</time>
                </div>
            </div>
            <div class="content_us_cmt">{{content}}</div>
        </span>
        <span class="us_response">
            <a href="#" class="us_response_t t_active"><i class="fa-solid fa-thumbs-up"></i><span class="res_like_num">10</span> Thích</a>
            <a href="#" class="us_response_tl"><i class="fa-solid fa-paper-plane"></i>Trả lời</a>
            <a href="#" class="us_response_bc"><i class="fa-solid fa-circle-exclamation"></i>Báo cáo</a>
        </span>
        
    </div>
</div>